<%- include('partials/header'); -%>

<h1>Home</h1>

<p><%= startingContent %></p>

<!-- similar to for loop -->
<% posts.forEach(function(post) { %>
    <h1><%=post.title%></h1>
    <p>
    <%=post.content.substring(0,100) + "..."%>
    <a href="/posts/<%= post._id %>">Read More</a>
    </p> <!--shows only the first 100 characters -->
    <% }); %>

